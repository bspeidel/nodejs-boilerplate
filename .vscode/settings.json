{
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  "stylelint.enable": true,
  "css.validate": false,
  "less.validate": true,
  "scss.validate": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    {
      "language": "javascript",
      "autoFix": true
    }
  ],
  "eslint.options": {
    "extends": "google",
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "parser": "babel-eslint",
    "plugins": [],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "legacyDecorators": true,
        "modules": true
      }
    }
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
